var startTime = 0
var elapsed = 0
var line_obj

const SPEED = 300

onready var world = get_tree().get_root().get_node(\"World\")

func _ready():
	startTime = OS.get_unix_time()
	resetHandPos()
	
	line_obj = Line2D.new()
	line_obj.add_point($Cell1.position)
	line_obj.add_point($Cell2.position)
	world.addLine(line_obj, $Cell2, $Cell1)
	
func resetHandPos():
	$Hand.position = Vector2(466, 795)
	$Hand.visible = true
	elapsed = 0
	startTime = OS.get_unix_time()

func _process(delta):
	var curTime = OS.get_unix_time()
	var elapsed = curTime - startTime
	
	if $Hand.visible:
		var targetPos = Vector2(256, 776)
		targetPos.x = targetPos.x + 40
		targetPos.y = targetPos.y + 40
		var pos = $Hand.position.move_toward(targetPos, delta * SPEED)

		$Hand.position = pos
		if elapsed > 2:
			resetHandPos()
"

